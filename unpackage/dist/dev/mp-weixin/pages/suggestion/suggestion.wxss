
.submit-btn{
		background-color:rgb(29, 169, 255);
		width: 500rpx;
		color:white;
		font-weight: 700;
		position: absolute;
		bottom:100rpx;
		left:50%;
		transform: translate(-50%);
		height:80rpx;
		border-radius: 40rpx;
		text-align: center;
		line-height: 80rpx;
}
.suggestions{
		margin:50rpx auto;
		width:600rpx;
		height: 900rpx;
		border-radius: 30rpx;
		border:1rpx solid grey;
		padding: 40rpx;
		box-sizing: border-box;
}
.submit-suggestion{
		position: fixed;
		top:200rpx;
		z-index: 10;
		width: 90%;
		left:50%;
		transform: translate(-50%);
		border: 1rpx solid grey;
		border-radius: 30rpx;
		height: 60%;
		background-color: white;
}
